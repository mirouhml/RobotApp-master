                    android:textColor="#FFFFFF" />
                <ImageView
                    android:id="@+id/circleGreenView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/greenView"
                    android:layout_alignTop="@+id/greenView"
                    android:layout_alignRight="@+id/greenView"
                    android:layout_alignBottom="@+id/greenView"
                    android:layout_margin="1dp"
                    android:visibility="visible"
                    android:src="@drawable/black_circle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/whiteView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/White"/>
                <TextView
                    android:id="@+id/whiteViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/whiteView"
                    android:layout_alignTop="@+id/whiteView"
                    android:layout_alignRight="@+id/whiteView"
                    android:layout_alignBottom="@+id/whiteView"
                    android:layout_margin="1dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Hello"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/circleWhiteView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/whiteView"
                    android:layout_alignTop="@+id/whiteView"
                    android:layout_alignRight="@+id/whiteView"
                    android:layout_alignBottom="@+id/whiteView"
                    android:layout_margin="1dp"
                    android:visibility="visible"
                    android:src="@drawable/black_circle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/grayView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/Gray" />
                <TextView
                    android:id="@+id/grayViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
