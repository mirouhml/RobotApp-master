        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".MissingOneLetter"
            android:configChanges="locale|orientation"
            android:label="@string/words_game"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SetLanguage"
            android:configChanges="locale|orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePage"
            android:configChanges="locale|orientation"
            android:label="Robot4Kids"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LearnAnimals"
            android:configChanges="locale|orientation"
            android:label="@string/animals"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LearnVegetables"
            android:configChanges="locale|orientation"
            android:label="@string/vegetables"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LearnFruits"
            android:configChanges="locale|orientation"
            android:label="@string/fruits"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Learn"
            android:configChanges="locale|orientation"
