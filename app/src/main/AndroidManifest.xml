            android:name=".SearchForAnimals"
            android:configChanges="locale|orientation"
            android:label="@string/animals"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchForVegetables"
            android:configChanges="locale|orientation"
            android:label="@string/vegetables"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchForFruits"
            android:configChanges="locale|orientation"
            android:label="@string/fruits"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MentalCalculations"
            android:configChanges="locale|orientation"
            android:label="@string/mental_calculations"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FreeMovement"
            android:configChanges="locale|orientation"
            android:label="@string/free_movement"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SearchForObject"
            android:configChanges="locale|orientation"
